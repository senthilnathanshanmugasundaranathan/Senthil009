# PERFORMANCE CONFIGURATION
# ============================================================================
# Constants for performance optimization
MAX_HISTORY_SIZE = 10
CACHE_TTL = 3600  # 1 hour in seconds
ANALYSIS_SIMULATION_TIME = 0.5  # Reduced from 2 seconds

# Pre-computed constants
STATUS_COLORS = {
    "good": "#22c55e",
    "needs-improvement": "#f59e0b",
    "poor": "#ef4444",
    "default": "#6b7280",
}

